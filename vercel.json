{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "^/(tasks(?:/.*)?|api(?:/.*)?)$", "dest": "/api/index.js" },
    { "src": "^/(?:index\\.html)?$", "dest": "/public/index.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}

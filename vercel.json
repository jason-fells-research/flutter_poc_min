{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/tasks(?:/.*)?", "dest": "/api/index.js" },

    /* Map static asset requests at root -> /public/$1 */
    { "src": "/(assets/.*)", "dest": "/public/$1" },
    { "src": "/(canvaskit/.*)", "dest": "/public/$1" },
    { "src": "/(icons/.*)", "dest": "/public/$1" },
    { "src": "/(favicon\\.png|manifest\\.json|version\\.json|flutter\\.js|flutter_bootstrap\\.js|main\\.dart\\.js|flutter_service_worker\\.js)", "dest": "/public/$1" },

    /* Serve the app shell */
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/index.html" }
  ]
}
